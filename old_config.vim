inoremap kl <esc>
nnoremap t V>
nnoremap T V<
autocmd BufNewFile,BufRead *.tpy set syntax=python

set backup
set backupdir=~/.vimbackup
set undofile
set undodir=~/.vimundo

set autoindent
set tabstop=2
set smarttab expandtab 
set shiftwidth=2
set softtabstop=0
set number
set numberwidth=2
set foldmethod=indent
set mouse=v
